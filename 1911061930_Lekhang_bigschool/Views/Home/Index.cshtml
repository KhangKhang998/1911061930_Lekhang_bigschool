@model IEnumerable<_1911061930_Lekhang_bigschool.Models.Course>
@{ ViewBag.Title = "Home Page"; }

<ul class="course">
    @foreach (var course in Model)
    {
    <li>
        <div class="date">
            <div class="month">
                @course.DateTime.ToString("MM")
            </div>
            <div class="day">
                @course.DateTime.ToString("dd")
            </div>
        </div>
        <div class="details">
            <span class="lecturer">
                @course.Lecturer.Name
            </span>
            <span class="category">
                @course.Category.Name
            </span>
        </div>
    </li>            
    }
</ul>

